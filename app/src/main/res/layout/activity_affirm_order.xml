<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.shopping.AffirmOrderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">

        <include layout="@layout/layout_top_action_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单"
            android:textColor="@color/c_242424"
            android:textSize="@dimen/dp_15" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_site"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/editor_bg">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:src="@mipmap/address" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_toRightOf="@id/icon">

                    <TextView
                        android:id="@+id/tv_site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxxxx"
                        android:textColor="@color/c_242424"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_site"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="小王"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/person_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_site"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toRightOf="@id/person_name"
                        android:text="15993586215"
                        android:textColor="@color/c_27b28b"
                        android:textSize="@dimen/dp_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_25"
                        android:src="@mipmap/guang" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_site"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/editor_bg">

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_22"
                    android:src="@mipmap/sc_icon" />

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_58"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="五谷稻场"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_15" />

                <ImageView
                    android:id="@+id/sp_iv"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:layout_below="@id/store_name"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_26" />

                <TextView
                    android:id="@+id/sp_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/store_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_toRightOf="@id/sp_iv"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/store_name"
                    android:layout_marginTop="@dimen/dp_120"
                    android:layout_toLeftOf="@id/sp_num"
                    android:text="数量："
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/sp_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/store_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_120"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="1"
                    android:textColor="@color/c_27b28b"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_below="@id/sp_iv"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:text="配送方式"
                        android:textColor="@color/c_242424"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_25"
                        android:text="快递运输"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/dp_15" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/bt_commit_order"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/login_bg"
            android:clickable="true"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_45"
            android:text="共计："
            android:textColor="@color/c_242424"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/total"
            android:textColor="@color/c_ffa344"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
</RelativeLayout>