<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.homepage.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_marginHorizontal="@dimen/dp_141"
        android:layout_marginTop="@dimen/dp_71"
        android:src="@mipmap/login_logo" />

    <LinearLayout
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_55">

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@null"
            android:hint="手机号码"
            android:textColorHint="@color/c_999999"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:layout_below="@id/input_phone"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/c_999999" />

    <LinearLayout
        android:id="@+id/input_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_27">

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/psw" />

        <EditText
            android:id="@+id/user_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@null"
            android:hint="登录密码"
            android:textColorHint="@color/c_999999"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:layout_below="@id/input_psw"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/c_999999" />

    <TextView
        android:id="@+id/forget_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="@dimen/dp_61"
        android:layout_marginTop="@dimen/dp_20"
        android:text="忘记密码？"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/dp_11" />

    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="@dimen/dp_133"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/forget_psw">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/forget_psw"
            android:text="用户注册"
            android:textColor="@color/c_27b28b"
            android:textSize="@dimen/dp_11" />

        <ImageView
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_below="@id/line1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_7"
            android:src="@mipmap/go_register" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_below="@id/input_psw"
        android:layout_marginHorizontal="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_119"
        android:background="@drawable/login_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12" />
</RelativeLayout>