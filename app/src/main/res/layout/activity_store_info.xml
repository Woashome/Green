<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.store.StoreInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="小红橱旗舰店"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

    </android.support.v7.widget.Toolbar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar">

                <ImageView
                    android:id="@+id/store_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:src="@drawable/cuxiao_bg" />

                <ImageView
                    android:id="@+id/store_logo"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_70"
                    android:background="@mipmap/touxiang" />

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_80"
                    android:layout_toRightOf="@id/store_logo"
                    android:text="小红橱麻辣小龙虾"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />

                <RelativeLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/store_logo"
                    android:layout_marginTop="@dimen/dp_23">

                    <RelativeLayout
                        android:id="@+id/rl_homepage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_69">

                        <TextView
                            android:id="@+id/homepage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="店铺首页"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_12" />

                        <ImageView
                            android:id="@+id/tip_1"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/homepage"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/select_tip" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_allgoods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_64">

                        <TextView
                            android:id="@+id/allgoods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部商品"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_12" />

                        <ImageView
                            android:id="@+id/tip_2"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/allgoods"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/select_tip" />
                    </RelativeLayout>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title" />
            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ballpulse.BallPulseView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>