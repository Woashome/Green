<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.mine.wallet.IntegralActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_27b28b"
        android:minHeight="?attr/actionBarSize">

        <include layout="@layout/layout_top_login_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_ji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@id/toolbar"
        android:background="@color/c_27b28b">

        <RelativeLayout
            android:id="@+id/rl_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_11">

            <ImageView
                android:id="@+id/jifen_iv"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:src="@mipmap/ji_fen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_toRightOf="@id/jifen_iv"
                android:text="积分"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_jifen"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_toLeftOf="@id/ji"
            android:text="￥"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_jifen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="500"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_27"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ji_ge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_jifen"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_toRightOf="@id/ji"
            android:text=".00"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:layout_below="@id/rl_ji"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/rl_huzhuang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_66"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/hu_zhuan" />

            <TextView
                android:id="@+id/huzhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="互转"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_12" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/cut_line" />

        <LinearLayout
            android:id="@+id/rl_tixian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_66"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/ti_xian" />

            <TextView
                android:id="@+id/tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="提现"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_12" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/white" />
</RelativeLayout>