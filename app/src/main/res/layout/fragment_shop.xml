<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ShopFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/shop"
        android:textColor="#242424"
        android:textSize="@dimen/dp_20" />

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:text="共2件商品"
        android:textColor="#999999"
        android:textSize="@dimen/dp_11" />

    <TextView
        android:id="@+id/editor"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:clickable="true"
        android:gravity="center"
        android:text="编辑"
        android:textColor="#242424"
        android:textSize="@dimen/dp_15" />

    <RelativeLayout
        android:id="@+id/rl_editor"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@id/goods_num"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@drawable/editor_bg">

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@+id/rl_editor"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_72" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/shop_bottom_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_settlement"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_33"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_19"
            android:background="@mipmap/close_account"
            android:clickable="true"
            android:text="立即结算"
            android:textColor="@color/c_27b28b" />
    </RelativeLayout>
</RelativeLayout>