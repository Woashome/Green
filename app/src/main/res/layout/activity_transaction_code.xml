<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.mine.wallet.TransactionCodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_27b28b"
        android:minHeight="?attr/actionBarSize">

        <include layout="@layout/layout_top_login_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易码"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@id/toolbar"
        android:background="@mipmap/chuzhi_bg">

        <RelativeLayout
            android:id="@+id/rl_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_11">

            <ImageView
                android:id="@+id/dgc_iv"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:src="@mipmap/dgc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_toRightOf="@id/dgc_iv"
                android:text="数字币"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_transaction"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toLeftOf="@id/bi"
            android:text="￥"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_transaction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="50"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_27"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bi_ge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_transaction"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toRightOf="@id/bi"
            android:text=".00"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bi_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/white" />
</RelativeLayout>