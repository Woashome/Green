<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_goods"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_93"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_14" />

    <TextView
        android:id="@+id/goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_toRightOf="@id/iv_goods"
        android:textStyle="bold"
        android:textColor="@color/c_242424"
        android:textSize="@dimen/dp_13" />

    <!--<ImageView
        android:id="@+id/new_product"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/goods_info"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/iv_goods"
        android:src="@mipmap/new_goods" />-->

    <TextView
        android:id="@+id/goods_pre_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sales_num"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_toRightOf="@id/iv_goods"
        android:textColor="@color/price_gray"
        android:textSize="@dimen/dp_11" />
    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_below="@id/goods_pre_price"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_toRightOf="@id/iv_goods"
        android:textColor="@color/red"
        android:textSize="@dimen/dp_13" />
    <TextView
        android:id="@+id/sales_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:textColor="@color/c_aeaeae"
        android:textSize="@dimen/dp_11" />

