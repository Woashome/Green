<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_93"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_14" />

    <TextView
        android:id="@+id/goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_toRightOf="@id/iv_goods"
        android:textColor="@color/c_242424"
        android:textSize="@dimen/dp_11" />

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/goods_info"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/iv_goods"
        android:src="@mipmap/new_goods" />

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_info"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_41"
        android:layout_toRightOf="@id/iv_goods"
        android:textColor="@color/red"
        android:textSize="@dimen/dp_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_price"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toRightOf="@id/iv_goods"
        android:textColor="@color/c_aeaeae"
        android:textSize="@dimen/dp_6" />

    <Button
        android:id="@+id/add_cart"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_19"
        android:background="@mipmap/add_trolley" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/bg_F4F4F4" />
</RelativeLayout>
