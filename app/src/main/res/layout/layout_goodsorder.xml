<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/mTv_storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/sc_icon"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="线上若水"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="代付款"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mImg_icon"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_below="@+id/mTv_storeName"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:id="@+id/mTv_commodityName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_80"
                android:layout_below="@+id/mTv_storeName"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@+id/mImg_icon"
                android:gravity="center_vertical"
                android:text="这城市那akjsdkjaskdhakshjdlkjasajshdahsdkjahslkdhkaljshdd么空"
                android:textColor="@color/c_242424" />

            <TextView
                android:id="@+id/mTv_commodityPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTv_commodityName"
                android:gravity="right|center_vertical"
                android:text="共一件商品 实付款 ： 一个亿"
                android:textColor="@color/c_242424" />

            <View
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@+id/mTv_commodityPrice"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/c_999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:layout_alignParentEnd="true"
                android:background="@drawable/seckill_bg"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_2"
                android:text="购买"
                android:textColor="@color/red" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
